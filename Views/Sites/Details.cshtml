@model SistemApp.Models.Site

@{
    ViewData["Title"] = "Site Details";
}

<h1 class="text-3xl font-bold mb-6">Site Details</h1>

<div class="mb-6 border-b border-gray-300 pb-6">
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
        <div>
            <dt class="text-sm font-semibold text-gray-600">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="mt-1 text-gray-900">@Html.DisplayFor(model => model.Name)</dd>
        </div>
    </dl>
</div>

<div class="flex space-x-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" 
       class="px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Edit</a>
    <a asp-action="Index" 
       class="px-5 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">Back to List</a>
</div>
