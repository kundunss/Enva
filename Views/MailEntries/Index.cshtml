@model IEnumerable<SistemApp.Models.MailEntry>

@{
    ViewData["Title"] = "EnvaMail";
    bool showArchived = (bool)ViewData["ShowArchived"];
}

<div class="bg-white dark:bg-gray-900 shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-300 dark:border-gray-700">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">EnvaMail @ViewBag.SelectedCompanyName</h1>
    </div>
    
    <div class="p-6">
        @await Html.PartialAsync("_FilterPartial", ViewBag.Sites as IEnumerable<SistemApp.Models.Site>)
            <div class="flex gap-2">
                <a asp-action="Create" 
                   class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Yeni Ekle
                </a>
                <a asp-action="Import" 
                   class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                    </svg>
                    Excel İçe Aktar
                </a>
                <button onclick="exportToExcel()" class="inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-lg transition-colors duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Excel Dışa Aktar
                </button>
                @if (showArchived)
                {
                    <a asp-action="Index" asp-route-showArchived="false" 
                       class="inline-flex items-center px-4 py-2 bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 text-gray-900 dark:text-white font-medium rounded-lg transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                        </svg>
                        Arşivlileri Gizle
                    </a>
                }
                else
                {
                    <a asp-action="Index" asp-route-showArchived="true" 
                       class="inline-flex items-center px-4 py-2 bg-gray-300 dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-600 text-gray-900 dark:text-white font-medium rounded-lg transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                        Arşivlileri Göster
                    </a>
                }
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
                <thead class="bg-gray-100 dark:bg-gray-800">
                    <tr>
                        <th class="w-16 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            Sıra No
                        </th>
                        <th class="w-32 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            Adı Soyadı
                        </th>
                        <th class="w-24 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            Şantiye
                        </th>
                        <th class="w-40 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            E-posta Adresi
                        </th>
                        <th class="w-20 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            Şifre
                        </th>
                        <th class="w-24 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            Domain
                        </th>
                        <th class="w-20 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            Arşivlenmiş
                        </th>
                        <th class="w-32 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-300 dark:divide-gray-700">
                @{ int rowIndex = 1; }
                @foreach (var item in Model) {
                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-800">
                        <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 font-medium truncate">
                            @rowIndex
                        </td>
                        <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">
                            @Html.DisplayFor(modelItem => item.Personnel!.FullName)
                        </td>
                    @{ rowIndex++; }
                        <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">
                            @Html.DisplayFor(modelItem => item.Personnel!.Site!.Name)
                        </td>
                        <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td class="px-3 py-2 text-sm truncate">
                            <span class="password-field cursor-pointer text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300" data-password="@item.Password" title="Kopyalamak için tıklayın">
                                ••••••••
                            </span>
                        </td>
                        <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">
                            @Html.DisplayFor(modelItem => item.Domain!.Name)
                        </td>
                        <td class="px-3 py-2 text-sm truncate">
                            @if (item.IsArchived)
                            {
                                <span class="inline-flex px-1 py-0.5 text-xs font-semibold rounded bg-red-200 text-red-800 dark:bg-red-700 dark:text-red-200">
                                    Evet
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex px-1 py-0.5 text-xs font-semibold rounded bg-green-200 text-green-800 dark:bg-green-700 dark:text-green-200">
                                    Hayır
                                </span>
                            }
                        </td>
                       <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="inline-flex items-center px-3 py-1 bg-yellow-600 hover:bg-yellow-700 text-white text-xs font-medium rounded transition-colors duration-200">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                Düzenle
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="inline-flex items-center px-3 py-1 bg-cyan-600 hover:bg-cyan-700 text-white text-xs font-medium rounded transition-colors duration-200">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                Detaylar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="inline-flex items-center px-3 py-1 bg-red-600 hover:bg-red-700 text-white text-xs font-medium rounded transition-colors duration-200">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                </svg>
                                Sil
                            </a>
                        </td>

                    </tr>
                }
                </tbody>
            </table>
<div class="mt-6 bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Mail Hesabı Durumları</h3>

    <div class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-600">
            <div class="text-lg font-medium text-gray-600 dark:text-gray-400">Toplam Aktif Mail Hesabı</div>
            <div class="text-3xl font-bold text-green-600 dark:text-green-400">@ViewBag.TotalActiveMails</div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-600">
            <div class="text-lg font-medium text-gray-600 dark:text-gray-400">Toplam Arşivli Mail Hesabı</div>
            <div class="text-3xl font-bold text-red-600 dark:text-red-400">@ViewBag.TotalArchivedMails</div>
        </div>
    </div>
    
    <h4 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">Şantiyelere Göre Dağılım</h4>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        @if (ViewBag.SiteMailCounts != null)
        {
            @foreach (var siteGroup in ((IEnumerable<dynamic>)ViewBag.SiteMailCounts).GroupBy(x => x.SiteName).OrderBy(g => g.Key))
            {
                var activeCount = siteGroup.FirstOrDefault(g => !g.IsArchived)?.Count ?? 0;
                var archivedCount = siteGroup.FirstOrDefault(g => g.IsArchived)?.Count ?? 0;
                
                <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm border border-gray-200 dark:border-gray-600">
                    <h5 class="text-md font-semibold text-gray-900 dark:text-white mb-2">@siteGroup.Key</h5>
                    <div class="flex justify-between items-center text-sm">
                        <span class="text-green-600 dark:text-green-400 font-medium">Aktif:</span>
                        <span class="text-green-600 dark:text-green-400 font-bold">@activeCount</span>
                    </div>
                    <div class="flex justify-between items-center text-sm">
                        <span class="text-red-600 dark:text-red-400 font-medium">Arşivli:</span>
                        <span class="text-red-600 dark:text-red-400 font-bold">@archivedCount</span>
                    </div>
                </div>
            }
        }
    </div>
</div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        // Şifreyi tıklayınca kopyala ve kısa süreli tooltip göster
        document.querySelectorAll('.password-field').forEach(el => {
            el.addEventListener('click', () => {
                const password = el.getAttribute('data-password');
                navigator.clipboard.writeText(password).then(() => {
                    const originalText = el.textContent;
                    el.textContent = 'Kopyalandı!';
                    setTimeout(() => el.textContent = '••••••••', 1500);
                });
            });
        });

        // Filtreleme artık _FilterPartial.cshtml'de yapılıyor
    </script>

    <script>
        function exportToExcel() {
            const siteSelect = document.getElementById('siteFilter');
            const selectedSiteId = siteSelect ? siteSelect.value : '';
            const showArchived = @showArchived.ToString().ToLower();
            
            let url = '@Url.Action("ExportToExcel", "MailEntries")';
            const params = [];
            
            if (showArchived) {
                params.push('showArchived=true');
            }
            
            if (selectedSiteId) {
                params.push('siteId=' + selectedSiteId);
            }
            
            if (params.length > 0) {
                url += '?' + params.join('&');
            }
            
            window.location.href = url;
        }
    </script>
}
