@model SistemApp.Models.MailEntry

@{
    ViewData["Title"] = "Mail Kaydını Düzenle";
}

<div class="container mx-auto px-4 py-6 max-w-lg">
    <h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Mail Kaydını Düzenle</h1>
    
    <form asp-action="Edit" class="space-y-6 bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
        <div asp-validation-summary="ModelOnly" class="text-red-700 dark:text-red-400 bg-red-100 dark:bg-red-900 rounded px-4 py-3"></div>
        
        <input type="hidden" asp-for="Id" />
        
        <div>
            <label asp-for="PersonnelId" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Adı Soyadı</label>
            <select asp-for="PersonnelId" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="ViewBag.PersonnelId"></select>
            <span asp-validation-for="PersonnelId" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
        </div>
        
        <div>
            <label asp-for="EmailUsername" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Mail Kullanıcı Adı</label>
            <input asp-for="EmailUsername" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="EmailUsername" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
        </div>
        
        <div>
            <label asp-for="DomainId" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Alan Adı</label>
            <select asp-for="DomainId" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="ViewBag.DomainId"></select>
            <span asp-validation-for="DomainId" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
        </div>
        
        <div>
            <label asp-for="Password" class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Şifre (Eski şifreyi korumak için lütfen boş bırakın)</label>
            <input asp-for="Password" type="password" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Password" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
        </div>
        
        <div class="flex items-center space-x-2">
            <input asp-for="IsArchived" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700" />
            <label asp-for="IsArchived" class="text-sm text-gray-700 dark:text-gray-300">Arşivlenmiş</label>
        </div>
        
        <div class="pt-4 flex space-x-4">
            <input type="submit" value="Güncelle" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 cursor-pointer" />
            <a asp-action="Index" class="px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200 inline-flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Listeye geri dön
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
