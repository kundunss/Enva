@model SistemApp.Models.Personnel

@{
    ViewData["Title"] = "Edit Personnel";
}

<div class="flex items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Personel DÃ¼zenle</h1>
    @if (ViewBag.SelectedCompanyName != null)
    {
        <span class="sr-only">@ViewBag.SelectedCompanyName</span>
    }
</div>

<hr class="mb-6 border-gray-300" />

<div class="max-w-lg">
    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="FirstName" class="block mb-1 font-semibold text-gray-700"></label>
            <input asp-for="FirstName" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="LastName" class="block mb-1 font-semibold text-gray-700"></label>
            <input asp-for="LastName" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="SiteId" class="block mb-1 font-semibold text-gray-700"></label>
            <select asp-for="SiteId" class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" asp-items="ViewBag.SiteId"></select>
            <span asp-validation-for="SiteId" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex items-center space-x-2">
            <input type="checkbox" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" asp-for="IsActive" />
            <label asp-for="IsActive" class="font-semibold text-gray-700 cursor-pointer">@Html.DisplayNameFor(model => model.IsActive)</label>
        </div>

        <div class="flex space-x-3">
            <input type="submit" value="Save" class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition cursor-pointer" />
            <a asp-action="Index" class="px-6 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
