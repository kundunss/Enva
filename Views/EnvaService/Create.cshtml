@model SistemApp.Models.ServiceEntry
@{
    ViewData["Title"] = "Hizmet Ekle";
}
<div class="container mx-auto px-4 py-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-6">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Yeni Hizmet Ekle</h1>
        </div>
        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 text-red-700 dark:text-red-300 px-4 py-3 rounded"></div>
            <div>
                <label asp-for="Date" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tarih</label>
                <input asp-for="Date" type="date" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                <span asp-validation-for="Date" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="CompanyId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Firma</label>
                <select asp-for="CompanyId" asp-items="@(ViewData["CompanyId"] as SelectList)" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white"></select>
                <span asp-validation-for="CompanyId" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Açıklama</label>
                <input asp-for="Description" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                <span asp-validation-for="Description" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
            </div>
            <div>
                <label asp-for="Amount" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Tutar</label>
                <input asp-for="Amount" type="number" step="0.01" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                <span asp-validation-for="Amount" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
            </div>
            <div class="flex justify-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(function() {
            console.log('jQuery:', typeof $);
            console.log('validator:', typeof $.validator);
            console.log('unobtrusive:', typeof $.validator.unobtrusive);

            $('form').on('submit', function(e) {
                console.log('Form submit event triggered');
            });
        });
    </script>
}