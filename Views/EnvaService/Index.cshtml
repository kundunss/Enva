@model IEnumerable<SistemApp.Models.ServiceEntry>
@{
    ViewData["Title"] = "EnvaService";
}
<div class="bg-white dark:bg-gray-900 shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-300 dark:border-gray-700">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">EnvaService @ViewBag.SelectedCompanyName</h1>
    </div>
    <div class="p-6">
        <div class="flex gap-2 mb-4">
            <a href="/EnvaService/Create" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Yeni Hizmet Ekle
            </a>
            <button onclick="exportToExcel()" class="inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white font-medium rounded-lg transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Excel Dışa Aktar
            </button>
        </div>
        <form method="get" class="flex flex-wrap gap-2 mb-4 items-end">
            <div>
                <label for="companyId" class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">Firma</label>
                <select id="companyId" name="companyId" asp-items="ViewBag.Companies" class="px-2 py-1 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                    <option value="">Tümü</option>
                </select>
            </div>
            <div>
                <label for="startDate" class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">Başlangıç Tarihi</label>
                <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate" class="px-2 py-1 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
            </div>
            <div>
                <label for="endDate" class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">Bitiş Tarihi</label>
                <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate" class="px-2 py-1 rounded border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Filtrele</button>
            </div>
        </form>
        <div class="overflow-x-auto max-h-[70vh]">
            <table class="min-w-full table-fixed divide-y divide-gray-300 dark:divide-gray-700">
                <thead class="bg-gray-100 dark:bg-gray-800">
                    <tr>
                        <th class="w-16 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider sticky top-0 bg-gray-100 dark:bg-gray-800 z-20">Sıra No</th>
                        <th class="w-32 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider sticky top-0 bg-gray-100 dark:bg-gray-800 z-20">Tarih</th>
                        <th class="w-40 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider sticky top-0 bg-gray-100 dark:bg-gray-800 z-20">Firma</th>
                        <th class="w-40 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider sticky top-0 bg-gray-100 dark:bg-gray-800 z-20">Açıklama</th>
                        <th class="w-24 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider sticky top-0 bg-gray-100 dark:bg-gray-800 z-20">Tutar</th>
                        <th class="w-32 px-3 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-400 uppercase tracking-wider sticky top-0 bg-gray-100 dark:bg-gray-800 z-20">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-300 dark:divide-gray-700">
                @{
                    var modelList = Model?.ToList() ?? new List<SistemApp.Models.ServiceEntry>();
                    for (int i = 0; i < modelList.Count; i++)
                    {
                        var item = modelList[i];
                <tr class="hover:bg-gray-100 dark:hover:bg-gray-800 @(i % 2 == 1 ? "bg-gray-50 dark:bg-gray-800" : "")">
                    <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 font-medium truncate">@(i + 1)</td>
                    <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">@item.Date.ToString("yyyy-MM-dd")</td>
                    <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">@item.Company?.Name</td>
                    <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">@item.Description</td>
                    <td class="px-3 py-2 text-sm text-gray-900 dark:text-gray-100 truncate">@item.Amount.ToString("N0") ₺</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="inline-flex items-center px-3 py-1 bg-yellow-600 hover:bg-yellow-700 text-white text-xs font-medium rounded transition-colors duration-200">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="inline-flex items-center px-3 py-1 bg-red-600 hover:bg-red-700 text-white text-xs font-medium rounded transition-colors duration-200">
                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>Sil
                        </a>
                    </td>
                </tr>
                    }
                }
                </tbody>
            </table>
        </div>
        <div class="mt-6 text-sm text-gray-500 dark:text-gray-400">
            <b>Not:</b> Eklenen hizmetler firmaya borç olarak yazılır. Envapay ile ödeme yapıldıkça bu borçtan düşülür.
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function exportToExcel() {
            let url = '/EnvaService/ExportToExcel';
            window.location.href = url;
        }
    </script>
}
