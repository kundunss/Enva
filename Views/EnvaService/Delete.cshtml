@model SistemApp.Models.ServiceEntry
@{
    ViewData["Title"] = "Hizmet Sil";
}
<div class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">Sil</h1>
    <h3 class="text-lg text-gray-700 dark:text-gray-300 mb-6">Bu hizmet kaydını silmek istediğinize emin misiniz?</h3>
    <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mb-6">
        <h4 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-4">Hizmet Bilgisi</h4>
        <hr class="border-gray-300 dark:border-gray-700 mb-4" />
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-y-3">
            <div>
                <dt class="font-medium text-gray-600 dark:text-gray-400">Tarih</dt>
                <dd class="text-gray-900 dark:text-gray-100">@Model.Date.ToString("yyyy-MM-dd")</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600 dark:text-gray-400">Firma</dt>
                <dd class="text-gray-900 dark:text-gray-100">@Model.Company?.Name</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600 dark:text-gray-400">Açıklama</dt>
                <dd class="text-gray-900 dark:text-gray-100">@Model.Description</dd>
            </div>
            <div>
                <dt class="font-medium text-gray-600 dark:text-gray-400">Tutar</dt>
                <dd class="text-gray-900 dark:text-gray-100">@Model.Amount.ToString("N0") ₺</dd>
            </div>
        </dl>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="flex justify-end gap-2">
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
            <button type="submit" class="btn btn-danger">Sil</button>
        </div>
    </form>
</div>
