@model SistemApp.Models.EquipmentType

@{
    ViewData["Title"] = "Donanım Türü Ekle";
}

<div class="container mx-auto px-4 py-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <div class="flex items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Donanım Türü Ekle</h1>
        </div>
        
        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
            <div class="max-w-2xl">
                <form asp-action="Create" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 text-red-700 dark:text-red-300 px-4 py-3 rounded"></div>
                    
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Donanım Türü Adı</label>
                        <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" placeholder="Sunucu, Router, Switch vb." />
                        <span asp-validation-for="Name" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <div class="flex space-x-4 pt-6">
                        <input type="submit" value="Kaydet" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" />
                        <a asp-action="Index" class="inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}