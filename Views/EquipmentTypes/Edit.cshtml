@model SistemApp.Models.EquipmentType

@{
    ViewData["Title"] = "Ekipman Türü Düzenle";
}

<h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Ekipman Türü Düzenle</h1>

<hr class="mb-6" />

<div class="max-w-md">
    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
        <input type="hidden" asp-for="Id" />
        <div>
            <label asp-for="Name" class="block mb-2 font-medium text-gray-700 dark:text-gray-300"></label>
            <input asp-for="Name" 
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>
        <div class="flex space-x-4">
            <input type="submit" value="Kaydet" 
                   class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 cursor-pointer transition" />
            <a asp-action="Index" 
               class="px-4 py-2 bg-gray-400 text-gray-900 rounded hover:bg-gray-500 transition inline-block">Listeye Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
