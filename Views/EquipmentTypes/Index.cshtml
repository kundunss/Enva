@model IEnumerable<SistemApp.Models.EquipmentType>

@{
    ViewData["Title"] = "Ekipman Türleri";
}

<div class="max-w-5xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-gray-100">Ekipman Türleri</h1>

    <p class="mb-4">
        <a asp-action="Create" 
           class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
            Yeni Ekle
        </a>
    </p>

    <div class="overflow-x-auto bg-white dark:bg-gray-800 shadow rounded-lg">
        <table class="min-w-full text-left border-collapse">
            <thead class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-200">
                <tr>
                    <th class="py-3 px-6 font-semibold">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="py-3 px-6 font-semibold">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700 text-gray-800 dark:text-gray-300">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                        <td class="py-3 px-6">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="py-3 px-6 flex flex-wrap gap-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" 
                               class="px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition">
                                Düzenle
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" 
                               class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition">
                                Detaylar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" 
                               class="px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700 transition">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
