@model SistemApp.Models.Company

@{
    ViewData["Title"] = "Firma Düzenle";
}

<div class="bg-white dark:bg-gray-800 shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Firma Düzenle</h1>
    </div>
    
    <div class="p-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-400 mb-4"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-6">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Firma Adı</label>
                <input asp-for="Name" class="w-full px-4 py-3 text-base border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                <span asp-validation-for="Name" class="text-red-600 dark:text-red-400 text-sm"></span>
            </div>
            
            <div class="flex space-x-4">
                <button type="submit" class="inline-flex items-center px-6 py-3 text-base bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Güncelle
                </button>
                <a asp-action="Index" class="inline-flex items-center px-6 py-3 text-base bg-gray-500 hover:bg-gray-600 text-white font-medium rounded-lg transition-colors duration-200">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}