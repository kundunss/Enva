@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mx-auto px-4 py-12">
    <div class="text-center">
        <h1 class="text-5xl font-bold text-gray-900 dark:text-white mb-6">Enva'ya Hoş Geldiniz</h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
            Bu uygulama ile sistem donanımları, personel bilgileri, envanter öğeleri ve mail hesaplarını yönetebilirsiniz.
        </p>
        
        <!-- Ortalanmış kutular -->
        <div class="flex flex-wrap justify-center gap-6 mt-12">
            
            <!-- EnvaNetwork -->
            <div class="flex-grow max-w-xs bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-all duration-200">
                <div class="text-blue-600 dark:text-blue-400 mb-4">
                    <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2
                                 M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10
                                 a2 2 0 002 2zM9 9h6v6H9V9z">
                        </path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">EnvaNetwork</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                    Ağ cihazları ve sistem donanımlarını yönetin
                </p>
                <a href="/SystemHardware" 
                   class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 
                          text-white text-sm font-medium rounded transition-colors duration-200">
                    Görüntüle
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M9 5l7 7-7 7">
                        </path>
                    </svg>
                </a>
            </div>
<!-- EnvaMail -->
            <div class="flex-grow max-w-xs bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-all duration-200">
                <div class="text-red-600 dark:text-red-400 mb-4">
                    <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8
                                 M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5
                                 a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">EnvaMail</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                    E-posta hesaplarını ve şifrelerini yönetin
                </p>
                <a href="/MailEntries" 
                   class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 
                          text-white text-sm font-medium rounded transition-colors duration-200">
                    Görüntüle
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M9 5l7 7-7 7">
                        </path>
                    </svg>
                </a>
            </div>
            <!-- Envanter -->
            <div class="flex-grow max-w-xs bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-all duration-200">
                <div class="text-purple-600 dark:text-purple-400 mb-4">
                    <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7
                                 m8 4v10M4 7v10l8 4">
                        </path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Envanter</h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">
                    Envanter öğelerini ve atamalarını takip edin
                </p>
                <a href="/InventoryItems" 
                   class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 
                          text-white text-sm font-medium rounded transition-colors duration-200">
                    Görüntüle
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M9 5l7 7-7 7">
                        </path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>
