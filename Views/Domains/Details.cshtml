@model SistemApp.Models.Domain

@{
    ViewData["Title"] = "Domain Detayları";
}

<h1 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Domain Detayları</h1>

<div class="max-w-md bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md">
    <dl>
        <div class="mb-4 flex">
            <dt class="w-1/3 font-semibold text-gray-700 dark:text-gray-300"> 
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="w-2/3 text-gray-900 dark:text-white">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>
    </dl>
</div>

<div class="mt-6 flex space-x-4 max-w-md">
    <a asp-action="Edit" asp-route-id="@Model.Id" 
       class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">Düzenle</a>
    <a asp-action="Index" 
       class="px-4 py-2 bg-gray-400 text-gray-900 rounded-md hover:bg-gray-500 transition">Listeye Dön</a>
</div>
