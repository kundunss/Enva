@model SistemApp.Models.PayEntry
@{
    ViewData["Title"] = "Ödeme Sil";
}
<div class="container mx-auto px-4 py-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Ödeme Sil</h1>
        <div class="mb-6">
            <p class="text-lg">Aşağıdaki ödemeyi silmek istediğinize emin misiniz?</p>
            <ul class="mt-4 text-gray-700 dark:text-gray-200">
                <li><b>Tarih:</b> @Model.Date.ToString("yyyy-MM-dd")</li>
                <li><b>Firma:</b> @Model.Company?.Name</li>
                <li><b>Açıklama:</b> @Model.Description</li>
                <li><b>Tutar:</b> @Model.Amount.ToString("N0") ₺</li>
            </ul>
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-danger">Sil</button>
            </div>
        </form>
    </div>
</div>
