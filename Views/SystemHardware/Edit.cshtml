@model SistemApp.Models.SystemHardware

@{
    ViewData["Title"] = "EnvaNetwork Düzenle";
}

<div class="container mx-auto px-4 py-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <div class="flex items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">EnvaNetwork Düzenle</h1>
            @if (ViewBag.SelectedCompanyName != null)
            {
                <span class="hidden">@ViewBag.SelectedCompanyName</span>
            }
        </div>
        
        <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
            <div class="max-w-2xl">
                <form asp-action="Edit" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 text-red-700 dark:text-red-300 px-4 py-3 rounded"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div>
                        <label asp-for="EquipmentTypeId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Ekipman Türü</label>
                        <select asp-for="EquipmentTypeId" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" asp-items="ViewBag.EquipmentTypeId">
                            <option value="">Seçiniz...</option>
                        </select>
                        <span asp-validation-for="EquipmentTypeId" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Açıklama</label>
                        <input asp-for="Description" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        <span asp-validation-for="Description" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <div>
                        <label asp-for="IpAddress" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">IP Adresi</label>
                        <input asp-for="IpAddress" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" placeholder="192.168.1.1" />
                        <span asp-validation-for="IpAddress" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Username" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Kullanıcı Adı</label>
                        <input asp-for="Username" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        <span asp-validation-for="Username" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Şifre(Eski şifreyi korumak için lütfen boş bırakın)</label>
                        <input asp-for="Password" type="password" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        <span asp-validation-for="Password" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <input type="hidden" asp-for="CompanyId" value="@ViewBag.SelectedCompanyId" />
                    
                    <div>
                        <label asp-for="SiteId" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Şantiye</label>
                        <select asp-for="SiteId" id="siteSelect" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" asp-items="ViewBag.SiteId">
                            <option value="">Seçiniz...</option>
                        </select>
                        <span asp-validation-for="SiteId" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
                    </div>
                    
                    <div class="flex space-x-4 pt-6">
                        <input type="submit" value="Güncelle" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200" />
                        <a asp-action="Index" class="inline-flex items-center px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Listeye Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const companySelect = document.getElementById('companySelect');
            const siteSelect = document.getElementById('siteSelect');
            const currentSiteId = '@Model.SiteId';
            
            companySelect.addEventListener('change', function() {
                const selectedCompanyId = this.value;
                if (selectedCompanyId) {
                    loadSites(selectedCompanyId);
                } else {
                    siteSelect.innerHTML = '<option value="">Önce firma seçiniz...</option>';
                }
            });
            
            function loadSites(companyId) {
                fetch(`/SystemHardware/GetSitesByCompany?companyId=${companyId}`)
                    .then(response => response.json())
                    .then(sites => {
                        siteSelect.innerHTML = '<option value="">Seçiniz...</option>';
                        sites.forEach(site => {
                            const option = document.createElement('option');
                            option.value = site.value;
                            option.textContent = site.text;
                            if (site.value == currentSiteId) {
                                option.selected = true;
                            }
                            siteSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Site yükleme hatası:', error);
                        siteSelect.innerHTML = '<option value="">Site yüklenemedi</option>';
                    });
            }
            
            // Load sites for current company on page load
            if (companySelect.value) {
                loadSites(companySelect.value);
            }
        });
    </script>
}